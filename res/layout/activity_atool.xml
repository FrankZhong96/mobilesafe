<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="高级工具" />

    <TextView
        android:id="@+id/tv_query_phone_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="归属地查询"
        android:drawableRight="@android:drawable/star_on"
        android:gravity="center"
        android:background="@drawable/selector_atool_item_bg"
        android:textSize="21sp" />
    <TextView
        android:id="@+id/tv_sms_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="短信备份"
        android:drawableRight="@android:drawable/star_on"
        android:gravity="center"
        android:background="@drawable/selector_atool_item_bg"
        android:textSize="21sp" />
    <ProgressBar 
	    android:id="@+id/pb_bar"
	    android:visibility="gone"
	    style="@android:style/Widget.ProgressBar.Horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_commonnumber_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="常用号码查询"
        android:drawableRight="@android:drawable/star_on"
        android:gravity="center"
        android:background="@drawable/selector_atool_item_bg"
        android:textSize="21sp" />
    <TextView
        android:id="@+id/tv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="程序锁"
        android:drawableRight="@android:drawable/star_on"
        android:gravity="center"
        android:background="@drawable/selector_atool_item_bg"
        android:textSize="21sp" />
</LinearLayout>